# ========================================
# CONFIGURACIÓN DE VECTOR STORE
# ========================================
# Opciones: "chroma" o "faiss"
VECTOR_STORE=chroma
CHROMA_DB_PATH=./chroma_db
FAISS_DB_PATH=./faiss_db

# ========================================
# MODELOS DE IA (Hugging Face)
# ========================================
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMOTION_MODEL=cardiffnlp/twitter-xlm-roberta-base-sentiment-multilingual

# ========================================
# MEMORIA Y CONTEXTO
# ========================================
MEMORY_PATH=./memory
MAX_CONVERSATION_HISTORY=50
MEMORY_WINDOW=10

# ========================================
# HARDWARE
# ========================================
# Establecer en true para GPU con CUDA habilitado
USE_GPU=false

# ========================================
# SEGURIDAD
# ========================================
# Cambiar esto en producción
RHYTHM_MASTER_KEY=change_this_in_production